            .order(data-toggle="modal", data-target="#form") заказать
            // Modal
            #form.modal.fade(tabindex='-1', role='dialog', aria-labelledby='form', aria-hidden='true')
              .modal-dialog.modal-dialog-centered(role='document')
                .modal-content
                  .modal-header
                    p.m-0 оставьте ваши контактные
                      br 
                      | данные и наш менеджер 
                      br
                      span свяжется с вами!
                  .modal-body.pt-0
                    form
                      .form-control
                        label(for='name') Пример: Василий Петров
                        input(type='text',placeholder='Ваше имя', name='name')
                      .form-control.mt-3
                        label(for='phone') Пример: +79230098456
                        input(type='text',placeholder='Ваш номер телефона', name='phone')
                      button.order(type="submit") заказать

          .col-lg-3.p-0
            .rating.text-center
              img.mb-3(src="images/stars.png" alt="")
