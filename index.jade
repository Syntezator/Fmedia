              #revives.modal.fade(tabindex='-1', role='dialog', aria-labelledby='revives', aria-hidden='true')
                .modal-dialog.modal-dialog-centered(role='document')
                  .modal-content
                    .bd-carousel.p-0
                      #carouselRev.carousel.slide(data-ride='carousel')
