              .mt-2 ВОДОНЕПРОНИЦИЕМЫЙ КОРПУС
            .labels.mt-5.d-flex.justify-content-center
              img(src="images/30 giorni.png" alt="")
              img(src="images/100.png" alt="")
          .col-lg-6
            .clock-container.position-relative
              img.position-absolute(src="images/clock.png" alt="")
              .discount -72%
              .clock-bot
                .d-flex.justify-content-between
                 .old-price 3 535k IDR
                 .price 990k IDR
            .timer.mt-4
